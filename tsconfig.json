{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es2021",
      "dom"
    ],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "types": [
      "vite/client"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@web/*": [
        "web/*"
      ],
      "@api/*": [
        "api/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@contracts/*": [
        "contracts/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@validation/*": [
        "validation/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "build",
    "dist",
    "public",
    "scripts",
    "./vite.config.ts"
  ],
  "files": [
    "./package.json"
  ]
}