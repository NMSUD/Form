{
  "name": "nmsud.form",
  "version": "1.0.2",
  "author": "Kurt Lourens",
  "description": "A custom solution for capturing data for the yearly Unification Days event",
  "scripts": {
    "setup": "npm-run-all --sequential setup:*",
    "setup:hook": "git config core.hooksPath .githooks/",
    "start:api": "nodemon src/api/api.ts",
    "start:public": "cd public && npx alive-server",
    "start:web": "vite",
    "build": "npm-run-all --sequential build:*",
    "build:api": "tsc -p ./tsconfig.server.json && resolve-tspaths -p ./tsconfig.server.json --out ./build/src",
    "build:web": "vite build",
    "data:downloader": "dotenv -- ts-node --project tsconfig.server.json src/data/downloader.ts",
    "data:dev": "dotenv -- ts-node --project tsconfig.server.json src/data/interactive.ts",
    "db:generate": "xata codegen",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test:dev": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "@hope-ui/solid": "^0.6.7",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.0",
    "@solidjs/router": "^0.8.2",
    "@stitches/core": "^1.2.8",
    "@types/prompts": "^2.4.9",
    "@xata.io/client": "^0.28.4",
    "dayjs": "^1.11.10",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "koa-static": "^5.0.0",
    "prompts": "^2.4.2",
    "reflect-metadata": "^0.2.1",
    "solid-js": "^1.7.6",
    "solid-transition-group": "^0.0.10",
    "typedi": "^0.10.0",
    "vite-plugin-package-version": "^1.0.2"
  },
  "devDependencies": {
    "@hcaptcha/types": "^1.0.3",
    "@storybook/addon-essentials": "^8.0.0-alpha.15",
    "@storybook/addon-interactions": "^8.0.0-alpha.15",
    "@storybook/addon-links": "^8.0.0-alpha.15",
    "@storybook/blocks": "^8.0.0-alpha.15",
    "@storybook/testing-library": "^0.2.2",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^18.19.10",
    "copyfiles": "^2.4.1",
    "dotenv-cli": "^7.3.0",
    "jsdom": "^24.0.0",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "resolve-tspaths": "^0.8.17",
    "rimraf": "^4.2.0",
    "sass": "^1.58.0",
    "solid-devtools": "^0.27.3",
    "storybook": "^8.0.0-alpha.15",
    "storybook-solidjs": "^1.0.0-beta.2",
    "storybook-solidjs-vite": "^1.0.0-beta.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-solid": "^2.7.0",
    "vitest": "^1.2.2"
  }
}
